extends ./layout
block content
    .container
        .sixteen.columns
            h1.remove-bottom(style='margin-top: 40px;') BrightLeaf Solutions
            h5 Contact Us
            hr
        .sixteen.columns
            form(method='POST')
                label(for='name') Name
                input#name(type='text',name='name')
                label(for='email') Your Email
                input#email(type='text',name='email')
                label(for='phone') Your Contact Number
                input#phone(type='text', name='phone')
                label(for='message') Message
                textarea#message( name='message')   
                button.medium(type='submit') Submit
